@model PartyInvitation.Models.GuestResponse

@{
    ViewBag.Title = "Create";
}
<link href="~/Scripts/style.css" rel="stylesheet" />

<div class="container" role="form">
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Guest Response</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <br />
                <div class="form-group">
                    <label>Your First Name:</label>
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                </div>
                <br />
                <div class="form-group">
                    <label>Your Last Name:</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                </div>
                <br />
                <div class="form-group">
                    <label>Will you attend?</label>
                    @Html.DropDownListFor(x => x.WillAttend, new[] {new SelectListItem() {Text = "Yes, I'll be there",Value = bool.TrueString},
             new SelectListItem() {Text = "No, I can't come", Value = bool.FalseString}},
             "Choose an option", new { @class = "formcontrol" })
                </div>
                <br />
                <div class="form-group">
                    <label>Your phone:</label>
                    @Html.TextBoxFor(x => x.TelephoneNumber, new { @class = "form-control" })
                </div>
                <br />
                <div class="form-group">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "formcontrol" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Create" />
                </div>
                <br />
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
